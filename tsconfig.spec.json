{
  "extends": "./tsconfig.json",
  "emitDecoratorMetadata": true,
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "allowJs": true,
    "types": [
      "jest",
      "jquery",
      "jsdom",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "test-config",
    "interfaces",
    ".module.ts",
    "./src/app/main.ts",
  ],
}
